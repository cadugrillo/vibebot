# VibeBot Environment Configuration
# For local development - copy this file to .env and update values
# For Docker deployment - see .env.docker

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/vibebot?schema=public

# Redis Configuration (optional for local dev)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-secret-key-here-at-least-32-characters
JWT_REFRESH_SECRET=your-refresh-secret-key-here-at-least-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Login Security Configuration
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION_MINUTES=15

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# API Keys (Users will manage their own, but admins may need defaults)
# CLAUDE_API_KEY=
# OPENAI_API_KEY=

# Claude API Configuration
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
CLAUDE_DEFAULT_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096
CLAUDE_TIMEOUT=600000
CLAUDE_MAX_RETRIES=2
