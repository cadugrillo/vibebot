{
  "name": "vibebot",
  "version": "1.0.0",
  "description": "The project VibeBot consists in a self-hosted muti-user, AI Agent app. It should have at least the following features: Modern and easy-to-use web interface; Multiple chats with history; be able to use both Claude and OpenAI APIs for model selection; be able to access tools and remote MCP Servers.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/server.ts",
    "build": "tsc",
    "postbuild": "cp -r src/generated dist/ 2>/dev/null || true",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:claude": "tsx src/services/ai/claude/test-connection.ts",
    "test:claude:models": "tsx src/services/ai/claude/test-models.ts",
    "test:claude:stream": "tsx src/services/ai/claude/test-streaming.ts",
    "test:ai-integration": "tsx src/websocket/handlers/test-ai-integration.ts",
    "test:provider-factory": "tsx src/services/ai/providers/__tests__/test-factory.ts",
    "test:provider-fallback": "tsx src/services/ai/providers/__tests__/test-fallback.ts",
    "test:provider-unit": "npm run test:provider-factory && npm run test:provider-fallback"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cadugrillo/vibebot.git"
  },
  "keywords": [
    "ai",
    "chat",
    "mcp",
    "claude",
    "openai",
    "typescript",
    "express"
  ],
  "author": "Carlos Grillo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cadugrillo/vibebot/issues"
  },
  "homepage": "https://github.com/cadugrillo/vibebot#readme",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@prisma/client": "^6.18.0",
    "@types/ws": "^8.18.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.18.0",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  }
}
